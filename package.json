{
  "name": "node-api-skeleton",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "watch": "DEBUG='node-api-skeleton:*' nodemon index.ts --exec ts-node",
    "build": "tsc -p tsconfig.json",
    "serve": "node dist/index.js",
    "lint": "tslint -p tslint.json",
    "lint:fix": "tslint --fix -p tslint.json",
    "test:unit": "mocha --require ts-node/register --recursive ./test/**/*-unit.ts",
    "test:behavior": "mocha --require ts-node/register --recursive ./test/**/*-behavior.ts",
    "test": "npm run test:unit && npm run test:behavior",
    "doc": "apidoc -i modules/ -f '.*-routes.ts$' && echo 'Open ./doc/index.html' in your browser"
  },
  "keywords": [],
  "author": "Bruno Sautron <sautron.brunojj@gmail.com> (http://whoisbruno.com)",
  "license": "ISC",
  "dependencies": {
    "debug": "^3.1.0",
    "joi": "^13.1.2",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "mongoose": "^5.0.7",
    "morgan": "^1.9.0",
    "morgan-debug": "^2.0.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "restify": "^6.3.4",
    "restify-errors": "^5.0.0",
    "restify-plugins": "^1.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/debug": "0.0.30",
    "@types/joi": "^13.0.5",
    "@types/lodash": "^4.14.102",
    "@types/mocha": "^2.2.48",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.0.2",
    "@types/request": "^2.47.0",
    "@types/restify": "^5.0.7",
    "@types/restify-errors": "^4.3.2",
    "@types/supertest": "^2.0.4",
    "apidoc": "^0.17.6",
    "chai": "^4.1.2",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.12",
    "supertest": "^3.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
